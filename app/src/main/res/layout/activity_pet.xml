<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    tools:context=".PetActivity">

    <ScrollView
        android:id="@+id/pet_scrollview"
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/pet_layout"

                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="16dp"
                >

                <LinearLayout
                    android:paddingTop="30dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        app:cardElevation="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        >

                        <ImageView

                            android:scaleType="centerCrop"
                            android:adjustViewBounds="false"
                            android:id="@+id/pet_image"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            />

                    </androidx.cardview.widget.CardView>



                    <LinearLayout
                        android:paddingBottom="20dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/pet_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kanit_semibold"
                            android:textColor="@color/colorWhite"
                            android:text="ชื่อ"
                            android:textSize="30dp"
                            />
                        <TextView
                            android:id="@+id/pet_des_title"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kanit_light"
                            android:textColor="@color/colorWhite"
                            android:text="ขนาด: "
                            android:alpha="0.8"
                            android:textSize="20dp"
                            />

                        <TextView
                            android:id="@+id/pet_width"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kanit_light"
                            android:textColor="@color/colorWhite"
                            android:text="น้ำหนัก: "
                            android:alpha="0.8"
                            android:textSize="20dp"
                            />
                        <TextView
                            android:id="@+id/pet_gender"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kanit_light"
                            android:textColor="@color/colorWhite"
                            android:text="เพศ: "
                            android:alpha="0.8"
                            android:textSize="20dp"
                            />
                        <TextView
                            android:id="@+id/pet_birthday"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kanit_light"
                            android:textColor="@color/colorWhite"
                            android:text="วัดเกิด: "
                            android:alpha="0.8"
                            android:textSize="20dp"
                            />

                        <TextView
                            android:id="@+id/pet_breed"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kanit_light"
                            android:textColor="@color/colorWhite"
                            android:text="พันธุ์: "
                            android:alpha="0.8"
                            android:textSize="20dp"
                            />




                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pet_calendar_btn"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                app:cardBackgroundColor="@color/colorAmber"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                app:cardElevation="0dp"
                >

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center_vertical"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_calendar"
                        />

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_semibold"
                        android:textColor="@color/colorPrimary"
                        android:text="ปฏิทินนัดหมาย"
                        android:textSize="24dp"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pet_object_btn"

                android:layout_width="match_parent"
                android:layout_height="66dp"
                app:cardBackgroundColor="@color/colorAmber"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp"

                >

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center_vertical"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_basketball"
                        />

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_semibold"
                        android:textColor="@color/colorPrimary"
                        android:text="อุปกรณ์เสริมทักษะ"
                        android:textSize="24dp"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pet_food_btn"

                android:layout_width="match_parent"
                android:layout_height="66dp"
                app:cardBackgroundColor="@color/colorAmber"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp"

                >

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center_vertical"

                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_diet"
                        />

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_semibold"
                        android:textColor="@color/colorPrimary"
                        android:text="อาหาร"
                        android:textSize="24dp"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorAmber"
            >

            <LinearLayout
                android:id="@+id/pet_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_round_arrow_back_ios_24px"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_gravity="center_vertical"

                    android:paddingRight="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="กลับ"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/kanit_semibold"
                android:text="รายละเอียด"
                android:textColor="@color/colorPrimary"
                android:textSize="22dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/pet_edit_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="56dp"
                android:layout_width="30dp"
                android:tint="@color/colorPrimaryDark"
                android:layout_height="30dp"
                android:src="@drawable/ic_round_edit_24px"
                />

            <ImageView
                android:id="@+id/pet_delete_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_width="30dp"
                android:tint="@color/colorPrimaryDark"
                android:layout_height="30dp"
                android:src="@drawable/ic_round_delete_24px"
                />


        </RelativeLayout>


    </com.google.android.material.appbar.AppBarLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>