<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:id="@+id/new_main_card_layout"

        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="0dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        >



        <LinearLayout
            android:paddingTop="0dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="0dp"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                >

                <ImageView

                    android:scaleType="centerCrop"
                    android:adjustViewBounds="false"
                    android:id="@+id/new_main_card_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:paddingTop="30dp"
                android:paddingBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/new_main_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_semibold"
                    android:textColor="@color/colorWhite"
                    android:text="ชื่อ"
                    android:textSize="30dp"
                    />
                <TextView
                    android:id="@+id/new_main_card_des_title"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_light"
                    android:textColor="@color/colorWhite"
                    android:text="ขนาด: "
                    android:alpha="0.8"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/new_main_card_width"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_light"
                    android:textColor="@color/colorWhite"
                    android:text="น้ำหนัก: "
                    android:alpha="0.8"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/new_main_card_gender"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_light"
                    android:textColor="@color/colorWhite"
                    android:text="เพศ: "
                    android:alpha="0.8"
                    android:textSize="20dp"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/new_main_card_birthday"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_light"
                    android:textColor="@color/colorWhite"
                    android:text="วัดเกิด: "
                    android:alpha="0.8"
                    android:textSize="20dp"
                    />




            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>