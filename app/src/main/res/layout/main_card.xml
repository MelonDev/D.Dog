<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/main_card_layout"

        android:layout_height="150dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerCrop"
                android:adjustViewBounds="false"
                android:id="@+id/main_card_image"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                />

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/main_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_semibold"
                    android:textColor="@color/colorWhite"
                    android:text="ชื่อ"
                    android:textSize="24dp"
                    />
                <TextView
                    android:id="@+id/main_card_des_title"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_light"
                    android:textColor="@color/colorWhite"
                    android:text="ขนาด: "
                    android:alpha="0.8"
                    android:textSize="20dp"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/main_card_gender_card"

                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/colorLightBlue"
                    >

                    <TextView
                        android:id="@+id/main_card_gender_text"
                        android:layout_gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_semibold"
                        android:textColor="@color/colorWhite"
                        android:text="เพศ"
                        android:alpha="1"
                        android:textSize="20dp"
                        />


                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>